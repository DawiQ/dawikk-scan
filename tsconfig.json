{
    "compilerOptions": {
      "target": "esnext",
      "lib": ["esnext"],
      "allowJs": true,
      "skipLibCheck": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "declaration": true,
      "outDir": "./lib",
      "jsx": "react-native",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": true
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "node_modules",
      "lib",
      "example"
    ]
  }